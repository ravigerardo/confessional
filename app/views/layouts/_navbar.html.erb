<div data-controller="search">
  <nav class="navbar navbar-expand-lg">
    <div class="container py-2">
      <%= link_to root_path, class: 'navbar-brand text-primary me-5' do %>
        Confess***al
      <%end%>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <%= link_to root_path, class: 'nav-link' do %>
              <i class="fa-solid fa-house-user me-1"></i> Home
            <%end%>
          </li>
        </ul>
        <ul class="navbar-nav me-auto mb-5 mb-md-0">
            <button id="search_button" class="input-group-text">
              <span class="me-3">Search user</span>
              <i class="fa-solid fa-magnifying-glass"></i>
            </button>
        </ul>
        <ul class="navbar-nav">
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle btn btn-primary text-bg-primary" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <%= image_tag current_user.avatar.variant(:small), class: 'me-2', style: "border-radius: 50%; max-width: 25px;", width: '100%', height: '100%', alt: 'Avatar' if current_user.avatar.attached? %> <%= current_user.username %>
            </a>
            <ul class="dropdown-menu dropdown-menu-end">
              <li>
                <%= link_to user_path(current_user.username), class: 'dropdown-item' do %>
                  <i class="fa-solid fa-user me-2"></i> My profile
                <%end%>
              </li>
              <li>
                <%= link_to edit_user_registration_path, class: 'dropdown-item' do %>
                  <i class="fa-solid fa-user-pen me-2"></i> Edit profile
                <%end%>
              </li>
              <li><hr class="dropdown-divider"></li>
              <li>
                <%= link_to destroy_user_session_path, data: {turbo_method: :delete}, class: 'dropdown-item' do %>
                  <i class="fa-solid fa-right-from-bracket me-2"></i> Sign out
                <%end%>
              </li>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </nav>


  <div class="modal fade" id="search_modal">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">
            <%= text_field_tag :'q[username_cont]', nil, autocomplete: 'off', class: "form-control transparent", placeholder: "Search a user" %>
          </h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div id="users_list" class="modal-body list-group list-group-flush">
        </div>
      </div>
    </div>
  </div>
</div>
